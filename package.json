{
  "name": "@gavbarosee/react-kickstart",
  "version": "0.1.1",
  "type": "module",
  "description": "A modern CLI tool for creating React applications with various frameworks",
  "main": "src/index.js",
  "bin": {
    "react-kickstart": "bin/react-kickstart.js"
  },
  "scripts": {
    "start": "node bin/react-kickstart.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --silent",
    "test:flags": "node qa-automation/flag-validator.js",
    "test:features": "node qa-automation/feature-validator.js",
    "test:all": "npm run test && npm run test:flags && npm run test:features",
    "lint": "eslint src bin qa-automation --ext .js,.cjs",
    "lint:fix": "eslint src bin qa-automation --ext .js,.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "qa:critical": "node qa-automation/test-runner.js critical",
    "qa:standard": "node qa-automation/test-runner.js standard",
    "qa:edge": "node qa-automation/test-runner.js edge",
    "qa:quick": "node qa-automation/test-runner.js critical 5",
    "qa:flags": "node qa-automation/flag-validator.js",
    "prepare": "husky",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "react",
    "cli",
    "generator",
    "scaffold",
    "boilerplate",
    "create-react-app",
    "cra-alternative",
    "react-generator",
    "vite",
    "vite-react",
    "nextjs",
    "next-generator",
    "typescript",
    "tailwind",
    "redux",
    "react-router",
    "project-generator",
    "react-cli",
    "react-starter",
    "modern-react",
    "frontend",
    "web-development",
    "app-generator",
    "javascript",
    "jsx",
    "spa",
    "single-page-app",
    "build-tool",
    "developer-tools",
    "kickstart",
    "setup"
  ],
  "author": {
    "name": "Gav Barosee",
    "url": "https://github.com/gavbarosee"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gavbarosee/react-kickstart.git"
  },
  "bugs": {
    "url": "https://github.com/gavbarosee/react-kickstart/issues"
  },
  "homepage": "https://github.com/gavbarosee/react-kickstart#readme",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "cross-spawn": "^7.0.3",
    "execa": "^9.6.0",
    "figlet": "^1.7.0",
    "figures": "^6.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.9.3",
    "log-symbols": "^7.0.1",
    "open": "^10.1.0",
    "ora": "^8.2.0",
    "validate-npm-package-name": "^6.0.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "globals": "^15.15.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.9",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "prettier": "^3.6.2",
    "vitest": "^1.6.0",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "bin/**/*.{js,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "qa-automation/**/*.{js,cjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": true,
          "access": "public"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
          "execCwd": ".",
          "gitCommitOptions": [
            "--no-verify"
          ]
        }
      ]
    ]
  }
}
