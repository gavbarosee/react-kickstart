#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Pre-push validation hook
# Documentation: docs/development/branch-protection-workflow.md
# Skip with: SKIP_PREPUSH=1 git push

# Check if we're trying to push to main branch
BRANCH=$(git rev-parse --abbrev-ref HEAD)

if [ "$BRANCH" = "main" ]; then
  echo ""
  echo "ğŸš« PUSH BLOCKED: Direct pushes to 'main' branch are not allowed!"
  echo ""
  echo "ğŸ“‹ Please use the following workflow:"
  echo "   1. Create a feature branch: git checkout -b feature/your-feature-name"
  echo "   2. Make your changes and commit to the feature branch"
  echo "   3. Push the feature branch: git push origin feature/your-feature-name"
  echo "   4. Create a Pull Request via GitHub"
  echo ""
  echo "ğŸ’¡ This protects the main branch and ensures all changes go through proper review."
  echo "ğŸ“š See docs/development/branch-protection-workflow.md for details"
  echo ""
  exit 1
fi

if [ "$SKIP_PREPUSH" = "1" ]; then
  echo "Skipping pre-push checks due to SKIP_PREPUSH=1"
  exit 0
fi

echo "ğŸš€ Running comprehensive pre-push validation for branch: $BRANCH"
echo ""

# Code Quality Checks
echo "ğŸ“ Checking code quality..."
npm run lint || exit 1
npm run format:check || exit 1

# Unit Tests with Coverage
echo "ğŸ§ª Running unit tests with coverage..."
npm run test:coverage --silent || exit 1

# Flag Validation Tests
echo "ğŸ¯ Validating all CLI flags..."
npm run test:flags || exit 1

# Feature Validation Tests  
echo "ğŸ” Validating CLI features..."
npm run test:features || exit 1

# Critical QA Tests
echo "âš¡ Running critical QA configurations..."
npm run qa:critical || exit 1

echo ""
echo "âœ… All pre-push checks passed! Ready to push ğŸš€"
